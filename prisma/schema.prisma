// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

///////////////////////////////////////////////////////////////////////
// Ticket
///////////////////////////////////////////////////////////////////////

// All entities within the database are defined as tickets
model Ticket {
  ticket_id          Int       @id @default(autoincrement())
  ticket_status      String
  ticket_create_date DateTime
  ticket_close_date  DateTime?
  ticket_type        String
  ticket_city        String?
  ticket_location    String
  ticket_cost        Float?
  ticket_description String
  ticket_repair_time Int?
  ticket_upvotes     Int

  Picture            Picture[]
  
  @@map("ticket")
  
}

///////////////////////////////////////////////////////////////////////
// Picture
///////////////////////////////////////////////////////////////////////

model Picture {
  picture_id      Int    @id @default(autoincrement())
  picture_encoded String
  ticket          Ticket @relation(fields: [ticket_ID], references: [ticket_id])
  ticket_ID       Int

  @@map("picture")
}

///////////////////////////////////////////////////////////////////////
// TechTeam
///////////////////////////////////////////////////////////////////////

model TechTeam {
  id                Int     @id @default(autoincrement())
  name              String
  email             String? @unique
  specialisation    String
  contact_number    String  @unique @db.VarChar(10)
  nr_jobs_completed Int?
  rating_of_jobs    Float?

  @@map("techteam")
}

///////////////////////////////////////////////////////////////////////
// AuthorizedOfficials
///////////////////////////////////////////////////////////////////////

model AuthorizedOfficials {
  id             Int    @id @default(autoincrement())
  name           String
  email          String @unique
  contact_number String @unique @db.VarChar(10)
  cities         String

  @@map("authorizedofficials")
}
