{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@grid-watch/api/ticket/api": ["libs/api/ticket/api/src/index.ts"],
      "@grid-watch/api/ticket/repository": [
        "libs/api/ticket/repository/src/index.ts"
      ],
      "@grid-watch/api/ticket/service": ["libs/api/ticket/service/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
